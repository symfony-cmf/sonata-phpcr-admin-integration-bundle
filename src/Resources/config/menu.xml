<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="cmf_sonata_admin_integration.menu.menu_admin" class="%cmf_sonata_admin_integration.menu.menu_admin.class%">
            <tag
                name="sonata.admin"
                manager_type="doctrine_phpcr"
                group="dashboard.cmf"
                label_catalogue="CmfMenuBundle"
                label="dashboard.label_menu"
                label_translator_strategy="sonata.admin.label.strategy.underscore"
            />

            <argument/>
            <argument>%cmf_menu.persistence.phpcr.menu_document.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_menu.persistence.phpcr.content_basepath%</argument>
            </call>

            <call method="setMenuRoot">
                <argument>%cmf_menu.persistence.phpcr.menu_basepath%</argument>
            </call>
        </service>

        <service id="cmf_sonata_admin_integration.menu.node_admin" class="%cmf_sonata_admin_integration.menu.node_admin.class%">
            <tag
                name="sonata.admin"
                manager_type="doctrine_phpcr"
                group="dashboard.cmf"
                label_catalogue="CmfMenuBundle"
                label="dashboard.label_menu_node"
                label_translator_strategy="sonata.admin.label.strategy.underscore"
            />

            <argument/>
            <argument>%cmf_menu.persistence.phpcr.node_document.class%</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setRouteBuilder">
                <argument type="service" id="sonata.admin.route.path_info_slashes" />
            </call>

            <call method="setContentRoot">
                <argument>%cmf_menu.persistence.phpcr.content_basepath%</argument>
            </call>

            <call method="setMenuRoot">
                <argument>%cmf_menu.persistence.phpcr.menu_basepath%</argument>
            </call>

            <call method="setRecursiveBreadcrumbs">
                <argument>%cmf_sonata_admin_integration.menu.recursive_breadcrumbs%</argument>
            </call>
        </service>

        <service id="cmf_sonata_admin_integration.menu.extension.menu_node_referrers" class="Symfony\Cmf\Bundle\SonataAdminIntegrationBundle\Admin\Menu\Extension\MenuNodeReferrersExtension">
            <tag name="sonata.admin.extension"/>
        </service>

        <service id="cmf_sonata_admin_integration.menu.extension.menu_options" class="Symfony\Cmf\Bundle\SonataAdminIntegrationBundle\Admin\Menu\Extension\MenuOptionsExtension">
            <argument>form.group_menu_options</argument>
            <argument>%cmf_sonata_admin_integration.menu.extensions.menu_options.advanced%</argument>
            <tag name="sonata.admin.extension"/>
        </service>

    </services>

</container>

